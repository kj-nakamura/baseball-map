    "jsdom": "^23.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "keywords": ["baseball", "map", "japan", "npb", "interactive-map", "sports"],
  "author": "",
  "license": "MIT",
