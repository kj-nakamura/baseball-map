---
import BaseLayout from './BaseLayout.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

export interface Props {
  title: string;
  description?: string;
  locale?: string;
}

const { title, description, locale = 'en' } = Astro.props;

// Import translations
import enTranslations from '../i18n/en.json';
import jaTranslations from '../i18n/ja.json';

const translations = locale === 'ja' ? jaTranslations : enTranslations;
const t = translations.mlb;
const common = translations.common;

// No environment variables needed for Leaflet
---

<BaseLayout title={title} description={description}>
  <div class="map-container">
    <div class="header">
      <div class="title-row">
        <h1>{t.title}</h1>
        <div class="language-switcher">
          <span class="language-label">{common.languageSwitch}:</span>
          <a href={getRelativeLocaleUrl('en', 'mlb')} class={locale === 'en' ? 'active' : ''}>ðŸ‡ºðŸ‡¸ EN</a>
          <a href={getRelativeLocaleUrl('ja', 'mlb')} class={locale === 'ja' ? 'active' : ''}>ðŸ‡¯ðŸ‡µ JP</a>
        </div>
      </div>
      <p>{t.subtitle}</p>
    </div>

    <div class="league-toggle">
      <button class="league-btn active" onclick="showAllMLBTeams()" data-i18n="allTeams">{t.buttons.allTeams}</button>
      <button class="league-btn american" onclick="showAmericanLeague()" data-i18n="americanLeague">{t.buttons.americanLeague}</button>
      <button class="league-btn national" onclick="showNationalLeague()" data-i18n="nationalLeague">{t.buttons.nationalLeague}</button>
    </div>
    
    <div class="league-toggle">
      <button class="league-btn al-east" onclick="showALEast()" data-i18n="alEast">{t.buttons.alEast}</button>
      <button class="league-btn al-central" onclick="showALCentral()" data-i18n="alCentral">{t.buttons.alCentral}</button>
      <button class="league-btn al-west" onclick="showALWest()" data-i18n="alWest">{t.buttons.alWest}</button>
    </div>
    
    <div class="league-toggle">
      <button class="league-btn nl-east" onclick="showNLEast()" data-i18n="nlEast">{t.buttons.nlEast}</button>
      <button class="league-btn nl-central" onclick="showNLCentral()" data-i18n="nlCentral">{t.buttons.nlCentral}</button>
      <button class="league-btn nl-west" onclick="showNLWest()" data-i18n="nlWest">{t.buttons.nlWest}</button>
    </div>

    <div id="map"></div>

    <div id="team-info" style="display: none;">
      <h2 id="team-name"></h2>
      <p><strong data-i18n="stadium">{t.teamInfo.stadium}:</strong> <span id="stadium-name"></span></p>
      <p><strong data-i18n="location">{t.teamInfo.location}:</strong> <span id="location"></span></p>
      <p><strong data-i18n="league">{t.teamInfo.league}:</strong> <span id="league"></span></p>
    </div>

    <script type="module" define:vars={{ locale, translations }}>
      // Set global locale and translations for JavaScript
      window.mlbLocale = locale;
      window.mlbTranslations = translations;
      
      // Initialize Leaflet map on page load
      document.addEventListener('DOMContentLoaded', () => {
        // Wait for Leaflet to load
        const checkLeaflet = () => {
          if (typeof L !== 'undefined') {
            initMLBMap();
          } else {
            setTimeout(checkLeaflet, 100);
          }
        };
        checkLeaflet();
      });
    </script>
  </div>
</BaseLayout>

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

<!-- Leaflet JavaScript -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<style>
  @import '/src/styles/design-tokens.css';
  @import '/src/styles/components.css';
  @import '/src/styles/utilities.css';
  @import '/src/styles/style.css';

  .map-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  /* Title row with language switcher */
  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }

  .language-switcher {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
  }

  .language-label {
    font-weight: 500;
    color: #666;
  }

  .language-switcher a {
    padding: 4px 8px;
    border-radius: 4px;
    text-decoration: none;
    color: #666;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .language-switcher a:hover {
    background-color: #f0f0f0;
    color: #333;
  }

  .language-switcher a.active {
    background-color: #3498db;
    color: white;
    border-color: #3498db;
  }

  /* Custom marker styles */
  .custom-marker {
    background: transparent !important;
    border: none !important;
  }

  @media (max-width: 768px) {
    .title-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }

    .language-switcher {
      align-self: flex-end;
    }
  }

  /* MLB-specific button colors */
  .league-btn.american {
    background-color: #0066CC;
  }

  .league-btn.national {
    background-color: #CC0000;
  }

  .league-btn.al-east {
    background-color: #FF6600;
  }

  .league-btn.al-central {
    background-color: #009900;
  }

  .league-btn.al-west {
    background-color: #9900CC;
  }

  .league-btn.nl-east {
    background-color: #FF0066;
  }

  .league-btn.nl-central {
    background-color: #FF9900;
  }

  .league-btn.nl-west {
    background-color: #006600;
  }

  .league-btn.american.active,
  .league-btn.national.active,
  .league-btn.al-east.active,
  .league-btn.al-central.active,
  .league-btn.al-west.active,
  .league-btn.nl-east.active,
  .league-btn.nl-central.active,
  .league-btn.nl-west.active {
    background-color: #2c3e50;
  }

  @media (max-width: 768px) {
    .map-container {
      padding: 10px;
    }
  }
</style>

<script src="/src/scripts/mlb-script.js"></script>