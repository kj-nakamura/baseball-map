---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const travels = await getCollection('travel');
const sortedTravels = travels.sort((a, b) =>
  a.data.title.localeCompare(b.data.title)
);
---

<BaseLayout
  title="モデルコース一覧 - プロ野球観戦旅行プラン"
  description="全12球団の観戦＋観光モデルコース。野球観戦と各地の魅力を満喫する旅行プランの決定版。"
>
  <header class="travel-hero">
    <div class="hero-overlay">
      <div class="hero-content">
        <h1 class="hero-title">⚾ プロ野球観戦旅行</h1>
        <h2 class="hero-subtitle">モデルコース一覧</h2>
        <p class="hero-description">
          野球観戦と各地の魅力を組み合わせた、充実の旅行プランをご提案
        </p>
        <div class="hero-stats">
          <div class="stat-item">
            <span class="stat-number">12</span>
            <span class="stat-label">球団</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">全国</span>
            <span class="stat-label">対応</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">1-3泊</span>
            <span class="stat-label">プラン</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="travel-main">
    <!-- セ・リーグ -->
    <section class="league-section">
      <div class="league-header">
        <h2 class="league-title">🔴 セントラル・リーグ</h2>
        <p class="league-description">伝統と歴史ある6球団の本拠地を巡る旅</p>
      </div>

      <div class="course-grid">
        <article class="course-card central-league">
          <div class="course-image">
            <div class="course-icon">🏯</div>
            <div class="course-badge">王道</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">東京王道観光コース</h3>
            <p class="course-team">読売ジャイアンツ</p>
            <p class="course-description">
              皇居・浅草・銀座を巡る定番の東京観光と東京ドーム観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥4-9万円</span>
            </div>
            <a href="/travel/tokyo-giants-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card central-league">
          <div class="course-image">
            <div class="course-icon">🎨</div>
            <div class="course-badge">モダン</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">東京モダン観光コース</h3>
            <p class="course-team">東京ヤクルトスワローズ</p>
            <p class="course-description">
              表参道・六本木・新宿の最新スポットと神宮球場観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥5-10万円</span>
            </div>
            <a href="/travel/tokyo-swallows-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card central-league">
          <div class="course-image">
            <div class="course-icon">🌉</div>
            <div class="course-badge">港町</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">横浜みなとみらいコース</h3>
            <p class="course-team">横浜DeNAベイスターズ</p>
            <p class="course-description">
              みなとみらい・中華街・赤レンガ倉庫と横浜スタジアム観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥4-8万円</span>
            </div>
            <a href="/travel/yokohama-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card central-league">
          <div class="course-image">
            <div class="course-icon">🐅</div>
            <div class="course-badge">関西</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">大阪・神戸満喫コース</h3>
            <p class="course-team">阪神タイガース</p>
            <p class="course-description">
              大阪城・道頓堀・神戸観光と甲子園球場観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥5-10万円</span>
            </div>
            <a href="/travel/osaka-tigers-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card central-league">
          <div class="course-image">
            <div class="course-icon">🏰</div>
            <div class="course-badge">名古屋めし</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">名古屋グルメコース</h3>
            <p class="course-team">中日ドラゴンズ</p>
            <p class="course-description">
              名古屋城・熱田神宮・名古屋めしとナゴヤドーム観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥4-8万円</span>
            </div>
            <a href="/travel/nagoya-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card central-league">
          <div class="course-image">
            <div class="course-icon">⛩️</div>
            <div class="course-badge">平和・世界遺産</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">平和・宮島満喫コース</h3>
            <p class="course-team">広島東洋カープ</p>
            <p class="course-description">
              平和記念公園・宮島厳島神社とマツダスタジアム観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥5-10万円</span>
            </div>
            <a href="/travel/hiroshima-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>
      </div>
    </section>

    <!-- パ・リーグ -->
    <section class="league-section">
      <div class="league-header">
        <h2 class="league-title">🔵 パシフィック・リーグ</h2>
        <p class="league-description">革新的で魅力ある6球団の本拠地を巡る旅</p>
      </div>

      <div class="course-grid">
        <article class="course-card pacific-league">
          <div class="course-image">
            <div class="course-icon">🏔️</div>
            <div class="course-badge">大自然</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">北海道大自然コース</h3>
            <p class="course-team">北海道日本ハムファイターズ</p>
            <p class="course-description">
              札幌・小樽・函館の大自然とエスコンフィールド観戦
            </p>
            <div class="course-details">
              <span class="course-duration">2泊3日</span>
              <span class="course-budget">¥8-15万円</span>
            </div>
            <a href="/travel/hokkaido-3days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card pacific-league">
          <div class="course-image">
            <div class="course-icon">🐃</div>
            <div class="course-badge">食い倒れ</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">大阪食い倒れコース</h3>
            <p class="course-team">オリックス・バファローズ</p>
            <p class="course-description">
              たこ焼き・お好み焼きの本場とドーム球場観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥4-8万円</span>
            </div>
            <a href="/travel/osaka-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card pacific-league">
          <div class="course-image">
            <div class="course-icon">🌸</div>
            <div class="course-badge">近郊</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">埼玉のんびりコース</h3>
            <p class="course-team">埼玉西武ライオンズ</p>
            <p class="course-description">
              秩父・川越の自然と歴史、ベルーナドーム観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥3-6万円</span>
            </div>
            <a href="/travel/saitama-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card pacific-league">
          <div class="course-image">
            <div class="course-icon">🌊</div>
            <div class="course-badge">海辺</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">千葉マリンコース</h3>
            <p class="course-team">千葉ロッテマリーンズ</p>
            <p class="course-description">
              房総半島・海浜幕張の海辺リゾートとマリンスタジアム観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥4-7万円</span>
            </div>
            <a href="/travel/chiba-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card pacific-league">
          <div class="course-image">
            <div class="course-icon">🦅</div>
            <div class="course-badge">東北</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">宮城グルメコース</h3>
            <p class="course-team">東北楽天ゴールデンイーグルス</p>
            <p class="course-description">
              仙台・松島の絶景と牛たん、楽天イーグルス観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥4-8万円</span>
            </div>
            <a href="/travel/miyagi-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>

        <article class="course-card pacific-league">
          <div class="course-image">
            <div class="course-icon">🍜</div>
            <div class="course-badge">九州</div>
          </div>
          <div class="course-content">
            <h3 class="course-title">福岡グルメコース</h3>
            <p class="course-team">福岡ソフトバンクホークス</p>
            <p class="course-description">
              博多・太宰府のグルメと歴史、PayPayドーム観戦
            </p>
            <div class="course-details">
              <span class="course-duration">1泊2日</span>
              <span class="course-budget">¥5-9万円</span>
            </div>
            <a href="/travel/fukuoka-2days" class="course-link">
              詳細を見る <span class="link-arrow">→</span>
            </a>
          </div>
        </article>
      </div>
    </section>

    <!-- プラン比較 -->
    <section class="comparison-section">
      <div class="comparison-header">
        <h2 class="comparison-title">💡 プラン選びのコツ</h2>
        <p class="comparison-description">
          あなたにぴったりの観戦旅行プランを見つけよう
        </p>
      </div>

      <div class="comparison-grid">
        <div class="comparison-card">
          <div class="comparison-icon">💰</div>
          <h3>予算重視</h3>
          <p>3-6万円の低予算プラン</p>
          <ul class="comparison-list">
            <li>埼玉のんびりコース</li>
            <li>千葉マリンコース</li>
            <li>名古屋グルメコース</li>
          </ul>
        </div>

        <div class="comparison-card">
          <div class="comparison-icon">🍽️</div>
          <h3>グルメ重視</h3>
          <p>ご当地グルメを堪能</p>
          <ul class="comparison-list">
            <li>大阪食い倒れコース</li>
            <li>名古屋グルメコース</li>
            <li>宮城グルメコース</li>
            <li>福岡グルメコース</li>
          </ul>
        </div>

        <div class="comparison-card">
          <div class="comparison-icon">🏛️</div>
          <h3>観光重視</h3>
          <p>歴史・文化を満喫</p>
          <ul class="comparison-list">
            <li>東京王道観光コース</li>
            <li>平和・宮島満喫コース</li>
            <li>大阪・神戸満喫コース</li>
          </ul>
        </div>

        <div class="comparison-card">
          <div class="comparison-icon">🌟</div>
          <h3>特別体験重視</h3>
          <p>ここでしかできない体験</p>
          <ul class="comparison-list">
            <li>北海道大自然コース</li>
            <li>東京モダン観光コース</li>
            <li>横浜みなとみらいコース</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
      <div class="cta-content">
        <h2 class="cta-title">⚾ 野球観戦旅行をはじめよう</h2>
        <p class="cta-description">
          お気に入りの球団、行きたい場所から旅行プランを選んで、最高の観戦旅行体験を始めましょう。
        </p>
        <div class="cta-buttons">
          <a href="/guides" class="cta-button primary">観戦ガイドを見る</a>
          <a href="/" class="cta-button secondary">球場マップに戻る</a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  @import './index.css';
</style>
