---
import BaseLayout from '../../layouts/BaseLayout.astro';

// 球団データの静的定義
const guides = [
  { slug: 'giants', title: 'ジャイアンツ', stadium: '東京ドーム', icon: '🧡', league: 'セ・リーグ' },
  { slug: 'tigers', title: 'タイガース', stadium: '阪神甲子園球場', icon: '🐅', league: 'セ・リーグ' },
  { slug: 'dragons', title: 'ドラゴンズ', stadium: 'バンテリンドーム ナゴヤ', icon: '🐉', league: 'セ・リーグ' },
  { slug: 'baystars', title: 'ベイスターズ', stadium: '横浜スタジアム', icon: '⭐', league: 'セ・リーグ' },
  { slug: 'carp', title: 'カープ', stadium: 'MAZDA Zoom-Zoom スタジアム広島', icon: '🎣', league: 'セ・リーグ' },
  { slug: 'swallows', title: 'スワローズ', stadium: '明治神宮野球場', icon: '🐦', league: 'セ・リーグ' },
  { slug: 'fighters', title: 'ファイターズ', stadium: 'エスコンフィールド北海道', icon: '🏔️', league: 'パ・リーグ' },
  { slug: 'marines', title: 'マリーンズ', stadium: 'ZOZOマリンスタジアム', icon: '⚓', league: 'パ・リーグ' },
  { slug: 'buffaloes', title: 'バファローズ', stadium: '京セラドーム大阪', icon: '🐃', league: 'パ・リーグ' },
  { slug: 'lions', title: 'ライオンズ', stadium: 'ベルーナドーム', icon: '🦁', league: 'パ・リーグ' },
  { slug: 'eagles', title: 'イーグルス', stadium: '楽天モバイルパーク宮城', icon: '🦅', league: 'パ・リーグ' },
  { slug: 'hawks', title: 'ホークス', stadium: 'PayPayドーム', icon: '🦅', league: 'パ・リーグ' }
];

// リーグ別に分類
const centralLeague = guides.filter(guide => guide.league === 'セ・リーグ');
const pacificLeague = guides.filter(guide => guide.league === 'パ・リーグ');
---

<BaseLayout 
  title="観戦ガイド一覧 | プロ野球12球団本拠地マップ"
  description="プロ野球12球団の観戦ガイド一覧。各球場のアクセス、グルメ、観戦のコツを詳しく紹介"
>
  <header class="guides-header">
    <div class="header-content">
      <h1>📖 観戦ガイド一覧</h1>
      <p class="subtitle">プロ野球12球団の本拠地球場観戦ガイド</p>
      <nav>
        <a href="/" class="nav-link">← 球場マップに戻る</a>
      </nav>
    </div>
  </header>

  <main class="guides-content">
    <!-- セ・リーグ -->
    <section class="league-section">
      <h2 class="league-title">🔴 セントラル・リーグ</h2>
      <div class="guides-grid">
        {centralLeague.map((guide) => (
          <div class="guide-card">
            <div class="card-header">
              <h3>{guide.stadium}</h3>
              <p class="team-name">{guide.title}</p>
            </div>
            <div class="card-content">
              <p class="league">{guide.league}</p>
              <p class="icon">{guide.icon}</p>
            </div>
            <div class="card-footer">
              <a href={`/guides/${guide.slug}`} class="guide-link">
                観戦ガイドを見る →
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- パ・リーグ -->
    <section class="league-section">
      <h2 class="league-title">🔵 パシフィック・リーグ</h2>
      <div class="guides-grid">
        {pacificLeague.map((guide) => (
          <div class="guide-card">
            <div class="card-header">
              <h3>{guide.stadium}</h3>
              <p class="team-name">{guide.title}</p>
            </div>
            <div class="card-content">
              <p class="league">{guide.league}</p>
              <p class="icon">{guide.icon}</p>
            </div>
            <div class="card-footer">
              <a href={`/guides/${guide.slug}`} class="guide-link">
                観戦ガイドを見る →
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .guides-header {
    background: linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 100%);
    color: white;
    padding: 2rem 1rem;
    text-align: center;
  }

  .header-content h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .nav-link {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s;
  }

  .nav-link:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .guides-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .league-section {
    margin-bottom: 3rem;
  }

  .league-title {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    text-align: center;
    padding: 1rem;
    border-radius: 10px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  }

  .guides-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .guide-card {
    background: #f8f9fa;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .guide-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .card-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1.5rem;
  }

  .card-header h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.3rem;
  }

  .team-name {
    margin: 0;
    font-size: 1rem;
    opacity: 0.9;
  }

  .card-content {
    padding: 1.5rem;
  }

  .league {
    color: #3498db;
    font-weight: bold;
    margin: 0 0 0.5rem 0;
  }

  .icon {
    font-size: 2rem;
    text-align: center;
    margin: 0.5rem 0;
  }

  .location, .capacity {
    color: #7f8c8d;
    font-size: 0.9rem;
    margin: 0.25rem 0;
  }

  .description {
    color: #2c3e50;
    margin: 1rem 0 0 0;
    line-height: 1.6;
  }

  .card-footer {
    padding: 1rem 1.5rem;
    background: #f8f9fa;
    border-top: 1px solid #e9ecef;
  }

  .guide-link {
    color: #3498db;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s;
  }

  .guide-link:hover {
    color: #2980b9;
  }

  @media (max-width: 768px) {
    .header-content h1 {
      font-size: 2rem;
    }
    
    .subtitle {
      font-size: 1rem;
    }
    
    .guides-grid {
      grid-template-columns: 1fr;
    }
  }
</style>